class Solution {

    public int[] runningSum(int[] nums) {
        
        // Step 1: Check if array is empty (optional safety check)
        if (nums == null || nums.length == 0) {
            return nums;
        }

        // Step 2: Start loop from index 1     
        for (int i = 1; i < nums.length; i++) {
            
            // Step 3: Add previous running sum to current element
            nums[i] = nums[i] + nums[i - 1];
        }

        // Step 4: Return modified array containing running sums
        return nums;
    }
}
